<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

    <CheckBox
    	android:id="@+id/option_commented"
    	android:layout_gravity="left"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="6dp"
    	android:layout_marginTop="50dp"
    	android:text="Notify me when someone commented on my issues" />
    
    <CheckBox
    	android:id="@+id/option_followed"
    	android:layout_gravity="left"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="6dp"
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="10dp"
    	android:text="Notify me when someone followed \n my issues" />

    <Button
		android:id="@+id/savechanges"
		android:layout_gravity="center_horizontal"
		style="@style/home_buttons_style"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:text="Save Changes" />
	
	</LinearLayout>